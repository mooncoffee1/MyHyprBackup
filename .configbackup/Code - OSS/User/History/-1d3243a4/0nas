#!/bin/bash

# Execute asusctl profile -n and capture the output
current_profile=$(asusctl profile -n)

# Notify with the current profile information
notify-send "Current ASUS Profile" "$current_profile"

# Execute asusctl profile -p and capture the output
new_profile=$(asusctl profile -p)

# Notify with the new profile information
notify-send "New ASUS Profile" "$new_profile"
