#!/bin/bash

# Check if a profile name is provided as a command-line argument
if [ -z "$1" ]; then
    echo "Usage: $0 <profile_name>"
    exit 1
fi

# Set the desired profile name
PROFILE_NAME="$1"

# Execute the asusctl command to set the profile
asusctl profile -n "$PROFILE_NAME"

# Retrieve the active profile
ACTIVE_PROFILE=$(asusctl profile -p)

# Send a notification with the output of asusctl profile -p
notify-send "ASUSCTL Profile Changed" "Active Profile: $ACTIVE_PROFILE"
